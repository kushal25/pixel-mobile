<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_background_color"
    tools:context="com.example.infinity.pixie.ProfileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/accountInfo"
        android:text="Your Profile"
        android:padding="20dp"
        android:textColor="@color/background_color"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/profileMenuListView"
        android:layout_below="@+id/accountInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:background="@color/screen_background_color"
        android:visibility="gone"
        android:id="@+id/profile_wait_layout">

        <TextView
            android:id="@+id/loggingOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp"
            android:singleLine="true"
            android:text="LOGGING OUT"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/settingMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="100dp"
            android:singleLine="true"
            android:text="MAY TAKE A FEW SECONDS..."

            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
